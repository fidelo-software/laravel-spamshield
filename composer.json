{
	"name": "fidelo-software/laravel-spamshield",
	"description": "Simple spam detection",
	"keywords": ["spam","spamshield"],
	"license": "MIT",
	"homepage": "https://fidelo.com",
	"authors": [
		{
			"name": "Fidelo Software GmbH",
			"email": "support@fidelo.com"
		}
	],
	"require": {
		"php": "^8.0",
		"illuminate/http": "9.*",
		"illuminate/support": "9.*"
	},
	"require-dev": {
		"pestphp/pest": "^1.22",
		"pestphp/pest-plugin-mock": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"FideloSoftware\\Spam\\": "src/",
			"FideloSoftware\\Spam\\Test\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": false
		}
	}
}
